<%= render 'partials/navbar-dark' %>


<main>
  <div class="container">
    <div class="next_step">
      <div class="row">
        <div class="col-md-12">
          <h1 class="next_step__header">Hey! Would love to hear from you!</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
          <p class="next_step__sub">Fill out the form below with your name, contact info, and a description of the your project and we will be in touch.</p>
          <form class="info_form">
            <input type="text" placeholder="Name" class="info_form__input" />
            <input type="text" placeholder="Email" class="info_form__input" />
            <input type="text" placeholder="Phone" class="info_form__input" />
            <textarea placeholder="Tell us about your project" class="info_form__textarea"></textarea>
            <button class="info_form__button">Send Message</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>


<%= render 'partials/footer' %>
